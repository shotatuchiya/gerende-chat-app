<div class="message">
  <div class="upper-message">
    <div class="message-user">
      <%= message.user.name %>
    </div>
    <div class="message-date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="lower-message">
    <div class="message-content">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
  <% if user_signed_in? && current_user.id == message.user_id %>
    <div class="message-delete">
      <%= link_to "削除", room_message_path(message.room.id, message.id), method: :delete, class:"message-delete" %>
    </div>
  <% end %>
</div>
